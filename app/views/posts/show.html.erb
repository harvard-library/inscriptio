<div class="post show-object">
  <% content_for :header do %>Post for <%= @post.bulletin_board.reservable_asset.name %><% end %>
  <dl>
    <dt>Posted By:</dt>
	<% if current_user.admin? %>
	  <dd><%= link_to(@post.user.id, @post.user) %></dd>
	<% else %>
      <dd><%= @post.user.id %></dd>
    <% end %>
	<dt>Creation Time:</dt>
    <dd><%= @post.created_at %></dd>
	<dt>Message:</dt>
    <dd><%= @post.message %></dd>
	<dt>Moderator Flags:</dt>
    <dd><%= @post.moderator_flags %></dd>
    
  </dl>

  <h2 class="action-button"><%= link_to('New Post', new_post_path) %></h2>
</div>
