<div class="post show-object">
  <h1>Post for <%= @post.bulletin_board.reservable_asset.name %></h1>
  <dl>
    <dt>Posted By:</dt>
    <dd><%= @post.user.email %></dd>
	<dt>Creation Time:</dt>
    <dd><%= @post.created_at %></dd>
	<dt>Message:</dt>
    <dd><%= @post.message %></dd>
	<dt>Public?</dt>
    <dd><%= @post.public %></dd>
	<dt>Moderator Flags:</dt>
    <dd><%= @post.moderator_flags %></dd>
    
  </dl>

  <h2 class="action-button"><%= link_to('New Post', new_post_path) %></h2>
</div>
