<% content_for :header do %>Sign up<% end %>
<h2>Sign up</h2>

<%= semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <%= f.inputs do %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
    <%= f.input :email %>
	<%= f.input :user_type %>
	<%= f.input :school_affiliation %>
	<%= f.input :password, :as => :hidden, :input_html => { :value => User.random_password } %>
	<%= f.input :password_confirmation, :as => :hidden %>
  <% end %>
  <%= f.buttons %>
<% end %>

<%= render :partial => "devise/shared/links" %>

<script type="text/javascript" language="javascript">
  jQuery(document).ready(function(){
    jQuery($('#user_password_confirmation').val($('#user_password').val()));
  })
</script>