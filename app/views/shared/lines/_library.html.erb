<div class="library line" id="library-<%= library.id %>">
  <h3><%= link_to library, library %></h3>

  <% if admin_signed_in? %>
    <%= link_to 'Edit', edit_library_path(library) %> |
	<%= link_to('Delete', library_path(library), :method => :delete, :id => "delete-#{library.id}") %>
  <% end %>
</div>
