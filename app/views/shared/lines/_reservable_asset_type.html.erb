<li class="reservable_asset_type line" id="reservable_asset_type-<%= reservable_asset_type.id %>">

  <div class="collapsible"><h3 class="description"><%= reservable_asset_type.name.pluralize %> - <%= link_to("Add New #{reservable_asset_type.name}", new_reservable_asset_type_reservable_asset_path(reservable_asset_type)) %></h3>
    <% if can? :manage, reservable_asset_type %>
      <ul class="actions" style="font-weight:normal;font-size: 13px;">
        <li><%= link_to('Edit', edit_library_reservable_asset_type_path(reservable_asset_type.library, reservable_asset_type), :class => "action-edit") %></li>
        <li><%= link_to('Delete', library_reservable_asset_type_path(reservable_asset_type.library, reservable_asset_type), :confirm => "Are you sure you want to delete this item? This action cannot be undone.", :method => :delete, :id => "delete-#{reservable_asset_type.id}", :class => "action-delete") %></li>
      </ul>
    <% end %>
  </div>
  <ul class="reservable_assets collection-list">
    <% unless reservable_asset_type.reservable_assets.blank? %>
      <%= render :partial => 'shared/lines/reservable_asset', :collection => reservable_asset_type.reservable_assets %>
    <% else %>
      <li class="empty">No reservable assets yet.</li>
    <% end %>
  </ul>
</li>
