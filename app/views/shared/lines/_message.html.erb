<li class="message line" id="message-<%= message.id %>">
  <%= link_to(message.title, message ) %>

  <% if can? :manage, message %>
	<ul class="actions">
      <li><%= link_to('Edit', edit_message_path(message), :class => "action-edit") %></li>
      <% unless message.description == "default" || message.description == "help" || message.description == "welcome" || message.description == "footer" %>
	    <li><%= link_to('Delete', message_path(message), :confirm => "Are you sure you want to delete this item? This action cannot be undone.", :method => :delete, :id => "delete-#{message.id}", :class => "action-delete") %></li>
	  <% end %>
    </ul>
  <% end %>
</li>
