<%= semantic_form_for(@reservation) do |f| %>
  <%= f.inputs do %>
	<%= f.label :start_date, "Start Date" %><br /><br />
	<%= f.calendar_date_select :start_date, :embedded => true, :valid_date_check => "date >= (new Date()).stripTime() && date < (new Date()).setDate((new Date()).getDate()+30)" %><br />
	<br />
	<%= f.label :end_date, "End Date" %><br /><br />
	<%= f.calendar_date_select :end_date, :embedded => true, :valid_date_check => "date >= (new Date()).stripTime() && date < (new Date()).setDate((new Date()).getDate()+#{@max_time})" %><br />
	<br />
	<% if current_user.admin? %>
      <%= f.input :reservable_asset, :selected => @reservable_asset %>
      <%= f.input :user %>
      <%= f.input :status, :include_blank => false %>
    <% else %>
      <%= f.input :reservable_asset_id, :as => :hidden, :value => @reservable_asset %>
	<% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
