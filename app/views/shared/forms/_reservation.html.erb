<%= semantic_form_for(@reservation) do |f| %>
  <%= f.inputs do %>
	<%= f.input :reservable_asset, :as => :hidden, :value => @reservable_asset %>
    <%= f.input :start_date, :as => :date %>
    <%= f.input :end_date, :as => :date %>
    <% if current_user.admin? %>
      <%= f.input :user %>
      <%= f.input :approved %>
	<% end %>
  <% end %>
  <%= f.buttons %>
<% end %>