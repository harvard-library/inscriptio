<%= semantic_form_for(@reservation) do |f| %>
  <%= f.inputs do %>
	Note: Minimum reservation time is <%= @min_time %> days and maximum reservation time is <%= @max_time %>.<br /><br />
	<%= f.label :start_date, "Start Date" %>  
	<%= f.calendar_date_select :start_date, :year_range => 1, :popup => 'force', :valid_date_check => "date >= (new Date()).stripTime() && date < (new Date()).setDate((new Date()).getDate()+30)" %><br />
	<br />
	<%= f.label :end_date, "End Date" %> 
	<%= f.calendar_date_select :end_date, :year_range => 1, :popup => 'force', :valid_date_check => "date >= (new Date()).setDate((new Date($('reservation_start_date').value)).getDate()+#{@min_time}) && date <= (new Date()).setDate((new Date($('reservation_start_date').value)).getDate()+#{@max_time})" %><br />
	<br />
	<% if current_user.admin? %>
      <%= f.input :reservable_asset, :selected => @reservable_asset %>
      <%= f.input :user %>
      <%= f.input :status, :include_blank => false %>
    <% else %>
      <%= f.input :reservable_asset_id, :as => :hidden, :value => @reservable_asset %>
	<% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
