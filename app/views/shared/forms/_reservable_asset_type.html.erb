<%= semantic_form_for(@reservable_asset_type, :html => {:multipart => true}) do |f| %>
  <%= f.inputs do %>
    <%= f.input :library %>
    <%= f.input :name %>
    <%= f.input :min_reservation_time %>
    <%= f.input :max_reservation_time %>
    <%= f.input :max_concurrent_users %>
    <%= f.input :reservation_time_increment %>
    <%= f.input :has_code %>
    <%= f.input :welcome_message %>
    <%= f.input :expiration_extension_time %>
    <%= f.input :requires_moderation %>
    <%= f.input :moderation_held_message %>
    <%= f.input :has_bulletin_board %>

  	<% unless f.object.photo.blank? %>
      <h3>Current Photo</h3>
      <%= image_tag(f.object.photo.url) %>
    <% end %>
    <%= f.input :photo, :as => :file, :label => 'Upload a Photo' %>
  <% end %>
  <%= f.buttons %>
<% end %>
