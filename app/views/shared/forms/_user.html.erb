<%= semantic_form_for(@user) do |f| %>
  <%= f.inputs do %>
	<%= f.input :first_name %>
	<%= f.input :last_name %>
    <%= f.input :email %>
	<%= f.input :school_affiliation %>
	<% if current_user.admin? %>
	  <%= f.input :user_type %>
	<% end %>
	<% unless @user == current_user %>
	  <%= f.input :admin %>
	<% end %>
  <% end %>
  <%= f.buttons %>
<% end %>
