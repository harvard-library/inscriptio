<div>
  <% unless @school_affiliations.blank? %>
  <ul class="school_affiliations collection-list">
	  <%= render :partial => 'shared/lines/school_affiliation', :collection => @school_affiliations %>
  </ul>
  <% else %>
	<h2>No school affiliations yet.</h2>
  <% end %>
</div>

  <% if can? :create, SchoolAffiliation %>
    <h2 class="action-new-subject"><%= link_to('New School Affiliation', new_school_affiliation_path) %></h2>
  <% end %>
