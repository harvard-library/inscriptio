require 'capistrano/rails/assets'
require 'capistrano/rails/migrations'

set :application, 'inscriptio'
set :repo_url, 'git@github.com:harvard-library/inscriptio.git'

ask :branch, proc { `git rev-parse --abbrev-ref HEAD`.chomp }

#Change These
set :user, 'username'
set :deploy_to, '/path/to/deploy'

set :deploy_via, :copy
set :scm, :git

set :format, :pretty
# set :log_level, :debug
# set :pty, true

# Create these in /path/to/deploy/shared
set :linked_files, %w{config/database.yml .env}
set :linked_dirs, fetch(:linked_dirs) + %w(public/uploads)

set :keep_releases, 3


namespace :deploy do

  desc 'Run arbitrary remote rake task'
  task :rrake do
    on roles(:app) do
      execute :rake, "#{ENV['T']} RAILS_ENV=#{fetch(:rails_env)}"
    end
  end

  desc 'Restart application'
  task :restart do
    on roles(:app), in: :sequence, wait: 5 do
      execute :touch, release_path.join('tmp/restart.txt')
    end
  end

  after :restart, :clear_cache do
    on roles(:web), in: :groups, limit: 3, wait: 10 do
      # Here we can do anything such as:
      # within release_path do
      #   execute :rake, 'cache:clear'
      # end
    end
  end

  after :finishing, 'deploy:cleanup'

end

# The following need to be after EVERYTHING; find a better way
before 'deploy:migrate', 'rvm:hook'
before 'deploy:rrake', 'rvm:hook'
before 'bundler:install', 'rvm:hook'

# HAX to get rake to work outside the context of deploy
namespace :rvm do
  task :hook do
    SSHKit.config.command_map[:rake].sub!(/rake/, "rake --rakefile #{release_path}/Rakefile")
  end
end
